{
  "name": "assistente-virtual",
  "version": "1.0.0",
  "description": "Um assistente de desktop com IA integrada e ferramentas de produtividade.",
  "main": "src/main/main.js",
  "author": "Seu Nome <email@example.com>",
  "license": "ISC",
  "scripts": {
    "start": "electron . --inspect=9222",
    "test": "vitest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "assistente",
    "ia",
    "produtividade",
    "electron"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "chromadb": "^3.0.10",
    "dotenv": "^16.3.1",
    "fluent-ffmpeg": "^2.1.3",
    "marked": "^16.1.1",
    "openai": "^5.12.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "wavefile": "^11.0.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "electron": "^27.0.4",
    "electron-builder": "^26.0.12",
    "jsdom": "^26.1.0",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.seuusuario.assistente-virtual",
    "productName": "Assistente Virtual",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,test-db,test.sqlite3}",
      "!**/*.{iml,iws,ipr,project,psd,xcodeproj,xcworkspace}"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
